<h1>Add New Student</h1>

<form class="" action="/students" method="post">
  <label for="first-name">First Name:</label>
  <input id="first-name" type="text" name="first_name">

  <label for="last-name">Last Name:</label>
  <input id="last-name" type="text" name="second_name">

  <label for="house-select">Select a house</label>
  <select id="house-select" name="house">

    <% for house in @houses %>
    <option value = "<%= house.id%> "> <%= house.name %> </option>
<% end %>

    <!-- <option value="1">Gryffindor</option>
    <option value="2">Ravenclaw</option>
    <option value="3">Hufflepuff</option>
    <option value="4">Slytherin</option> -->
  </select>

  <label for="age">Age</label>
  <input id="age" type="number" name="age">


  <input type="submit" value="Add New Student">
</form>
